<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageViewFind"
        android:layout_height="107dp"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_operator"/>

    <TextView
        android:id="@+id/textViewFind"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/imageView"
        android:text="On a besoin de vous"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-20dp"
        android:textStyle="bold"/>

    <ImageButton
        android:background="@null"
        android:id="@+id/buttonOUI"
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:src="@drawable/jyvais"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"/>

    <ImageButton
        android:background="@null"
        android:id="@+id/buttonNON"
        android:layout_height="60dp"
        android:layout_width="150dp"
        android:src="@drawable/jpeuxpas"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"/>
</LinearLayout>